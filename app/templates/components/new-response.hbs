{{#if addNewAnswer}}
<h2>New Answer</h2>
<div>
  <form>
    <div  class="form-group">
    <label for="answer">Answer</label>
    {{input value=answer id="answer"}}
  </div>
  <div  class="form-group">
  <label for="author">Author</label>
  {{input value=author id="author"}}
</div>
<button class="btn-success" {{action 'saveAnswer'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn-info" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
