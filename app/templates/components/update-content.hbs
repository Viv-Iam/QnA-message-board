{{#if updateContentForm}}
<h4>Update {{content.question}} {{content.author}}</h4>
<div>
  <form>
<div class="form-group">
  <label for="question" >Question</label>
  {{input value=question id="question" placeholder=content.question}}
</div>

<div class="form-group">
  <label for="author">Author</label>
  {{input value=author id="author" placeholder=content.author}}
</div>

<div class="form-group">
  <label for="notes">Notes</label>
  {{input value=notes id="notes" placeholder=content.notes}}
</div>

<button class="btn-success" {{action 'update' content}}>Save</button>
</form>
</div>
{{else}}
<button class="btn-info" {{action 'updateContentForm'}}>Update</button>
{{/if}}
